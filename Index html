<body>
  <h1>üöÄ Fast Typing App</h1>
  <p id="quote">Hello world, welcome to typing practice!</p>
  
  <input type="text" id="input" placeholder="Start typing here..." />
  <div id="result"></div>
  
  <button onclick="checkTyping()">Check</button>

  <script>
    function checkTyping() {
      const quote = document.getElementById("quote").innerText;
      const input = document.getElementById("input").value;
      const result = document.getElementById("result");

      if (input === quote) {
        result.innerHTML = "‚úÖ Correct! Good job üéâ";
        result.style.color = "green";
      } else {
        result.innerHTML = "‚ùå Wrong! Try again...";
        result.style.color = "red";
      }
    }
  </script>
